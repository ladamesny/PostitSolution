<%= render 'shared/errors', object: @post %>

<div class="well">
  <%= form_for(@post) do |f| %>
    <div class="control-group">
    <%= f.label :title %>
    <%= f.text_field :title%>
    </div>
    <div class="control-group">
    <%= f.label :url %>
    <%= f.text_field :url%>
    </div>
    <div class="control-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
    </div>
    <div class="control-group">
    <%= f.label "Categories" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>
    </div>
    <div class="control-group" style="margin-top:20px;">
      <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-small btn-primary')%>
      <%= link_to 'Cancel', posts_path, class: "btn btn-small btn-warning", style:"margin-left:20px;" %>
    </div>
<% end %>
</div>